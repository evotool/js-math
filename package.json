{
	"name": "@evojs/math",
	"version": "0.0.0",
	"description": "Nodejs math extension",
	"main": "index.js",
	"typings": "index.d.ts",
	"scripts": {
		"prebuild": "rm -rf dist/",
		"build": "tsc --diagnostics --project tsconfig.build.json && node build.js",
		"prepublishOnly": "npm run build && npm run test && node prepublish.js",
		"release": "RELEASE_MODE=1 npm run prepublishOnly && npm publish --access public dist/",
		"test": "jest --coverage --detectOpenHandles",
		"fix": "eslint \"src/**/*.ts\" --fix --ext .ts",
		"lint": "eslint \"src/**/*.ts\" -f codeframe"
	},
	"devDependencies": {
		"@types/jest": "^26.0.14",
		"@types/node": "^14.11.8",
		"@typescript-eslint/eslint-plugin": "^4.4.0",
		"@typescript-eslint/parser": "^4.4.0",
		"eslint": "^7.11.0",
		"eslint-plugin-import": "^2.22.1",
		"fs": "0.0.1-security",
		"jest": "^26.5.2",
		"ts-jest": "^26.4.1",
		"typescript": "^4.0.3"
	},
	"jest": {
		"collectCoverage": true,
		"collectCoverageFrom": [
			"src/**/*.ts"
		],
		"moduleFileExtensions": [
			"js",
			"ts"
		],
		"rootDir": "./",
		"testEnvironment": "node",
		"testRegex": ".spec.ts$",
		"transform": {
			"^.+\\.(ts|js)$": "ts-jest"
		},
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.spec.json"
			}
		}
	},
	"nodemonConfig": {
		"ignore": [
			".git",
			".vscode",
			"node_modules",
			"dist",
			"src",
			"coverage"
		],
		"watch": [
			"test/**/*.spec.ts"
		],
		"exec": "jest --coverage --detectOpenHandles",
		"ext": "ts"
	},
	"license": "MIT",
	"author": {
		"name": "Shamil Sultanov",
		"email": "evo@sultanov.io",
		"url": "http://evo.sultanov.io"
	},
	"keywords": [
		"nodejs",
		"evojs",
		"math",
		"extension"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evotool/js-math.git"
	},
	"bugs": {
		"url": "https://github.com/evotool/js-math/issues"
	},
	"homepage": "https://github.com/evotool/js-math#readme"
}
